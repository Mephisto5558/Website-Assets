{
  "name": "website-assets",
  "version": "1.0.0",
  "description": "Assets for my website",
  "keywords": [
    "js",
    "css"
  ],
  "homepage": "https://github.com/Mephisto5558//Website-Assets#readme",
  "bugs": {
    "url": "https://github.com/Mephisto5558//Website-Assets/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mephisto5558/Website-Assets.git"
  },
  "license": "MIT",
  "author": "Mephisto5558",
  "type": "module",
  "main": "index.js",
  "types": "globals.d.ts",
  "scripts": {
    "build": "npm-run-all --parallel build:**",
    "build:css": "esbuild css/**/*.css --bundle --minify --outdir=min/css",
    "build:js": "esbuild ts/**/*.ts --bundle --platform=browser --format=esm --minify --sourcemap --sources-content=false --outdir=min/js",
    "watch": "npm-run-all --parallel watch:**",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "npm run build:js -- --watch"
  },
  "devDependencies": {
    "@mephisto5558/eslint-config": "github:Mephisto5558/eslint-config",
    "esbuild": "^0.25.11",
    "globals": "^16.4.0",
    "npm-run-all2": "^8.0.4",
    "sweetalert2": "^11.26.2"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
