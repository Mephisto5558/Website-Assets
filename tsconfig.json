{
  "compilerOptions": {
    "moduleResolution": "Node10",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}